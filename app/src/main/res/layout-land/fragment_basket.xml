<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/main_back_land"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.cleardesign.voda.ui.fragment.BasketFragment">

    <ListView
        android:id="@+id/lvBasket"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/tvAllPrice"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:id="@+id/tvAllPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmOrderButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="New Text"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/confirmOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Подтвердить заказ" />
</RelativeLayout>
